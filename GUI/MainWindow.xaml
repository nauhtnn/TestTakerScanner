<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="filePath" Height="29" Margin="94,10,100,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Button Click="FileOpen_Click" Content="Browse Image" HorizontalAlignment="Left" Height="28" Margin="94,56,0,0" VerticalAlignment="Top" Width="104"/>
        <ScrollViewer Margin="0,108,0,0">
            <TextBlock x:Name="MyMessage" HorizontalAlignment="Left" Margin="10,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="772"/>
        </ScrollViewer>
        <Button Content="Post Image" Click="PostImage_Click" HorizontalAlignment="Left" Height="28" Margin="312,56,0,0" VerticalAlignment="Top" Width="110"/>
        <Button Content="Get Text" Click="GetText_Click" HorizontalAlignment="Left" Height="28" Margin="484,56,0,0" VerticalAlignment="Top" Width="121"/>

    </Grid>
</Window>
